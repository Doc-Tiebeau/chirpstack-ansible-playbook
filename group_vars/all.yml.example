lora_gateway_bridge:
  version: 2.1.0
  allow_connections_from:
    - your.address.ip.here
  configuration:
    MQTT_SERVER: tcp://localhost:1883/

loraserver:
  version: 0.9.2
  allow_connections_from:
    - your.address.ip.here
  configuration:
    NET_ID: "010203"
    BAND: EU_863_870
    DB_AUTOMIGRATE: true
    POSTGRES_DSN: postgres://loraserver:loraserver@localhost/loraserver?sslmode=disable

iptables:
  public_tcp_ports:
    - 22
    - 80
    - 443

mosquitto:
  allow_connections_from:
    - your.address.ip.here

postgresql:
  databases:
    - name: loraserver
      user: loraserver
      password: loraserver
